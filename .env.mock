# FORCED MOCK MODE FOR DUAL BADGE TESTING
# This disables ALL external API calls

# Disable LLM providers completely
MOCK_LLM_RESPONSES=true
DISABLE_ANTHROPIC_CALLS=true  
DISABLE_OPENAI_CALLS=true
DISABLE_AZURE_CALLS=true

# Force local mode
APP_MODE=LOCAL
NODE_ENV=development

# Mock all external services  
ENABLE_API_DOCS=false
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_APIS=true

# Disable batch processing to avoid API calls
ANTHROPIC_ENABLE_BATCHING=false
ENABLE_MEMORY_RAG=false

# Force component to use internal mocks
FORCE_MOCK_MODE=true